datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  completed Boolean?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  list      List?    @relation(fields: [listId], references: [id])
  listId    String?
  updatedAt DateTime @updatedAt
}

model List {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  notes     Note[]
  title     String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  lists     List[]
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
